<!-- views/view.handlebars -->
{{#if poll}}
<div class="container">
  <div class="page-header">
    <h1>{{poll.title}} <small>by {{poll.username}}</small></h1>
  </div>

  <form name="poll" id="poll" action="/vote" method="post">
    <input class="hidden" name="id" value="{{poll.id}}">
    <input class="hidden" name="total" value="{{poll.question.length}}">
    <ol>  
    {{#poll.question}}
      <li><p>{{title}}</p></li>
      {{#answer}}
      <div class="{{../type}}">
        <label><input type="{{../type}}" name="{{../id}}" value="{{this.[0]}}" class="form-field">{{this.[1]}}</label>
      </div>
        {{/answer}}
        </ul>
      {{/poll.question}}
    </ol>
    <div class="text-center"><input type="submit" value="Submit" class="btn"></div>
  </form>
  <hr>
  <div class="text-center">
    <p>Want to share this poll? <a class="btn btn-info btn-sm" target='_blank' id="twitter-share" href="http://twitter.com/intent/tweet?text='Do you have a minute? Please, take my poll http://{{poll.url}}'"><i class="fa fa-twitter fa-fw"></i>Tweet</a></p>
  </div>

</div>
{{else}}
    <p>Nothing to see here</p>
{{/if}}