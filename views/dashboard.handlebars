<!-- views/profile.handlebars -->
<div class="container">
  <div class="page-header">
    <h1>Dashboard <small>Manage your polls!</small></h1>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Profile Information</h3>
    </div>

    <div class="panel-body">
      <div class="row">
        <div class="col-md-3">
          <a href="#" class="thumbnail"><img src="{{user.avatar}}" class="img-responsive"></a>
        </div>
        <div class="col-md-9">
          <h1>{{user.username}}</h1>
          <p>E-Mail: {{user.email}}</p>
          <p>Member since: {{user.created}}</p>
          <a class="btn btn-default" href="#" role="button" id="deleteAccount">Remove account</a>
        </div>
      </div>
    </div>
  </div>

{{#if poll}}
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">My Polls</h3>
    </div>

    <div class="panel-body">
      <div id="new-poll">
        {{#each poll}}
        <div class="row">
          <div class="col-md-7"><p>{{this.title}}</p></div>
          <div class="col-md-1">
            <form action="/edit" method="get">
              <div class="form-group">
                <input class="hidden" name="pid" value={{this._id}}>
                <input type="submit" value="Edit" class="form-control poll-btn">
              </div>
            </form>
          </div>  
          <div class="col-md-1">
            <form action="/view" method="get">
              <div class="form-group">
                <input class="hidden" name="pid" value={{this._id}}>
                <input type="submit" value="View" class="form-control poll-btn">
              </div>
            </form>
          </div>
          <div class="col-md-1">
            <form action="/delete" method="post">
              <div class="form-group">
                <input class="hidden" name="pid" value={{this._id}}>
                <input type="submit" value="Delete" class="form-control poll-btn">
              </div>
            </form>
          </div>
          <div class="col-md-1">
            <form action="/results" method="get">
              <div class="form-group">
                <input class="hidden" name="pid" value={{this._id}}>
                <input type="submit" value="Results" class="form-control poll-btn">
              </div>
            </form>
          </div>
          <div class="col-md-1">
              <a class="btn btn-info" target='_blank' id="twitter-share" href="http://twitter.com/intent/tweet?text='Do you have a minute? Please, take my poll https://quick-poll.herokuapp.com/view?pid={{this._id}}'"><i class="fa fa-twitter fa-fw"></i></a>
          </div>  
        </div>
        {{/each}}
      </div>
    </div>
  </div>
{{/if}}
  <div class="panel panel-default">
    
    <div class="panel-heading">
      <h3 class="panel-title">New Poll</h3>
    </div>

    <div class="panel-body">
      <div id="new-poll">
        <form action="/createPoll" method="post">
          <div class="form-group">
              <label>Title:</label>
              <input type="text" name="title" placeholder="Title for your poll" class="form-control">
          </div>
          <div class="form-group">
              <input type="submit" value="Create" class="form-control">
          </div>
        </form>
      </div>
    </div>

  </div>

</div>

<script type="text/javascript">
  
  $("#deleteAccount").on("click",function(e){
    e.preventDefault();
  });

</script>