<!-- views/profile.handlebars -->
  <div class="jumbotron">
    <h1>Dashboard</h1>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Profile Information</h3>
    </div>

    <div class="panel-body">
      <div class="row">
        <div class="col-md-3">
          <img src="{{user.avatar}}"/>
        </div>
        <div class="col-md-9">
          <p>Username: {{user.username}}</p>
          <p>E-Mail: {{user.email}}</p>
          <p>Member since: {{user.created}}</p>
          <p>Polls created: {{user.polls}}</p>
        </div>
      </div>
    </div>
  </div>

{{#if poll}}
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">My Polls</h3>
    </div>

    <div class="panel-body">
      <div id="new-poll">
        <table>
          {{#each poll}}
            <tr>
              <td class="poll-title">{{this.title}}</td>
              <td class="poll-btns">
                <form action="/edit" method="get">
                  <div class="form-group">
                    <input class="hidden" name="pid" value={{this._id}}>
                    <input type="submit" value="Edit" class="form-control">
                  </div>
                </form>
              </td>
              <td class="poll-btns">
                <form action="/view" method="get">
                  <div class="form-group">
                    <input class="hidden" name="pid" value={{this._id}}>
                    <input type="submit" value="View" class="form-control">
                  </div>
                </form>
              </td>
              <td class="poll-btns">
                <form action="/delete" method="get">
                  <div class="form-group">
                    <input class="hidden" name="pid" value={{this._id}}>
                    <input type="submit" value="Delete" class="form-control">
                  </div>
                </form>
              </td>
            </tr>
          {{/each}}
        </table>
      </div>
    </div>
  </div>
{{/if}}

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">New Poll</h3>
    </div>

    <div class="panel-body">
      <div id="new-poll">
        <form action="/createPoll" method="post">
          <div class="form-group">
              <label>Title:</label>
              <input type="text" name="title" placeholder="Title for your poll" class="form-control">
          </div>
          <div class="form-group">
              <input type="submit" value="Create" class="form-control">
          </div>
        </form>
      </div>
    </div>
  </div>




  </div>

