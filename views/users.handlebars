<!-- views/users.handlebars -->
<div class="container">
  {{#if userProfile}}
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Profile Information</h3>
    </div>

    <div class="panel-body">
      <div class="row">
        <div class="col-md-3">
          <a href="#" class="thumbnail"><img src="{{userProfile.avatar}}" class="img-responsive"></a>
        </div>
        <div class="col-md-9">
          <h1>{{userProfile.username}}</h1>
          <p>E-Mail: {{userProfile.email}}</p>
          <p>Member since: {{userProfile.created}}</p>
        </div>
      </div>
    </div>
  </div>

  {{#if poll}}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">User Polls</h3>
      </div>

      <div class="panel-body">
        <div id="new-poll">
          {{#each poll}}
          <div class="row">
            <div class="col-md-10"><p>{{this.title}}</p></div>
            <div class="col-md-1">
              <form action="/view" method="get">
                <div class="form-group">
                  <input class="hidden" name="pid" value={{this._id}}>
                  <input type="submit" value="View" class="form-control á¹•oll-btn">
                </div>
              </form>
            </div>
            <div class="col-md-1">
                <a class="btn btn-info" target='_blank' id="twitter-share" href="http://twitter.com/intent/tweet?text='Do you have a minute? Please, take my poll'"><i class="fa fa-twitter fa-fw"></i></a>
            </div>  
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  {{/if}}

  {{/if}}
</div>

